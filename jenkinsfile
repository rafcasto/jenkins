pipeline {
    agent any

    stages {
    stage('Build') {
                steps {
                    sh './mvnw compile'
                }
            }
        stage('Code coverage') {
            steps {
                sh './mvnw jacoco:report'
                publishHTML (target:[
                    reportDir: 'build/reports/jacoco/test/html'
                    reportFiles: "index.html"
                    reportName: "JaCoCo Report"
                ])
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}